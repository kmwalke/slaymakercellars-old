
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :contact_business %>
    <% if @contact_business -%>
      <%= f.text_field :contact_business, value: @contact_business, data: {autocomplete_source: Contact.order(:business).map(&:business)} %>
    <% else -%>
      <%= f.text_field :contact_business, data: {autocomplete_source: Contact.order(:business).map(&:business)} %>
    <% end -%>
  </div>
  <div class="field">
    <%= f.label :delivery_date %>
    <% if @order.delivery_date -%>
      <%= f.text_field :delivery_date, class: "datepicker", value: @order.delivery_date.strftime("%d-%m-%Y") %>
    <% else -%>
      <%= f.text_field :delivery_date, class: "datepicker" %>
    <% end -%>
  </div>

  <div class="field">
    <%= f.label :customer_po, "Customer PO" %>
    <%= f.text_field :customer_po %>
  </div>

  <h3>Line Items</h3>
  <div id="line_items">
    <%= f.fields_for :line_items do |line_item| %>
      <%= render 'line_item_fields', f: line_item %>
    <% end -%>
    <div class="links">
      <%= link_to_add_association 'add line item', f, :line_items %>
    </div>
  </div>

  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, rows: 15, cols: 50 %>
  </div>
