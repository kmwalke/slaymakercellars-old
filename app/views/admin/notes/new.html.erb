<h1>New Issue</h1>

<%= form_for(@note, url: {action: "create"}) do |f| %>
  <div class="field">
    <%= f.label :content %><br/>
    <%= f.text_area :content, rows: 30, cols: 50 %>
  </div>
  <div class="field">
    <%= f.hidden_field :contact_id, value: @contact_id %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, value: @user_id %>
  </div>
  <div class="actions">
    <%= f.submit "Create Issue", disable_with: "Loading..." %>
  </div>
<% end -%>

