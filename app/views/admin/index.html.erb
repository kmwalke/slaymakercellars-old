	<fieldset>
		<legend><%= link_to "Salespeople", admin_salespeople_path %></legend>
		<ul>
			<li>
				<%= link_to 'New Salesperson', new_admin_salesperson_path %>
			</li>
			<li>
				<%= pluralize @salespeople, 'salesperson' %>
			</li>
		</ul>
	</fieldset>
