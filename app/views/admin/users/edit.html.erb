<h1>Editing user</h1>

<%= form_for(@user, url: admin_user_path(@user), html: {multipart: true}) do |f| %>
  <p>
    <% if @user.active? -%>
      <%= link_to 'Delete User', admin_user_path(@user), confirm: 'Are you sure?', method: :delete %>
    <% else -%>
      <%= link_to 'Restore User', undestroy_admin_user_path(@user), confirm: 'Are you sure?' %>
    <% end -%>
  </p>
  <p>
    <% if @user.contact -%>
      Linked Contact: <%= link_to(@user.contact.business, edit_admin_contact_path(@user.contact)) %>
    <% end -%>
  </p>
  <%= render partial: 'form', locals: {f: f} %>
<% end -%>

<%= link_to 'Back', admin_users_path %>
