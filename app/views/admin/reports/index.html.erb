<p id="notice"><%= notice %></p>

<h1>Listing Reports</h1>

<table>
  <thead>
  <tr>
    <th>Report type</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Totals?</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @reports.each do |report| %>
    <tr>
      <td><%= report.report_type %></td>
      <td><%= report.start_date %></td>
      <td><%= report.end_date %></td>
      <td><%= report.totals? %></td>
      <td><%= link_to 'Show', admin_report_path(report) %></td>
      <td><%= link_to 'Edit', edit_admin_report_path(report) %></td>
      <td>
        <%= link_to 'X',
                    admin_report_path(report),
                    confirm: 'Are you sure?',
                    method: :delete,
                    id: "delete_#{report.id}" %>
        &nbsp;
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Report', new_admin_report_path %>
