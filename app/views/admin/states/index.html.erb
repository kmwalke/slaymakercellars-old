<h1>Listing States</h1>


<table class="crud admin" cellpadding="0px" cellspacing="0px">
  <tr class="title">
    <th>Name</th>
    <th></th>
  </tr>

  <% @states.each do |state| %>
    <tr class="<%= cycle "even", "odd" %>">
      <td><%= link_to state.name, edit_admin_state_path(state) %></td>
      <td><%= link_to 'X', admin_state_path(state), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

<br>

